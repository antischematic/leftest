{
   "jsc": {
      "target": "es2017",
      "parser": {
         "syntax": "typescript",
         "decorators": true,
         "dynamicImport": true
      },
      "transform": {
         "decoratorMetadata": true,
         "legacyDecorator": true
      },
      "keepClassNames": true,
      "externalHelpers": true,
      "loose": true
   },
   "module": {
      "type": "es6",
      "strict": true,
      "noInterop": true
   },
   "sourceMaps": true,
   "exclude": [
      "vite.config.ts",
      ".*\\.spec.tsx?$",
      ".*\\.test.tsx?$",
      "./src/vitest-setup.ts$",
      "./**/vitest-setup.ts$",
      ".*.js$"
   ]
}
